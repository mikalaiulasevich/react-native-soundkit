{
  "name": "react-native-soundkit",
  "version": "1.0.0",
  "description": "The ultimate sound playback library for React Native! Lightweight, flexible, and built for performance. Works seamlessly on Android, iOS, and Web. Packed with features like seamless audio playback, cross-platform support, and easy integration. Perfect for apps that demand high-quality audio experiences!",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "cpp/**/*.h",
    "cpp/**/*.cpp",
    "android/src",
    "android/build.gradle",
    "android/CMakeLists.txt",
    "android/cpp-adapter.cpp",
    "android/gradle.properties",
    "lib/commonjs",
    "lib/module",
    "lib/typescript",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "src",
    "react-native-soundkit.podspec",
    "react-native.config.js"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint-cpp": "scripts/clang-format.sh",
    "check-all": "yarn lint --fix && yarn lint-cpp",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "prepare": "bob build",
    "prepack": "bob build",
    "pods": "cd example && yarn pods",
    "release": "release-it",
    "codegen": "npx react-native codegen"
  },
  "keywords": [
    "react",
    "react-native",
    "sound",
    "audio",
    "music",
    "av",
    "ios",
    "android",
    "fast",
    "playback",
    "sound-effects",
    "audio-player",
    "media",
    "media-player",
    "cross-platform",
    "high-performance",
    "audio-kit",
    "react-native-audio",
    "react-native-sound",
    "sound-management",
    "sound-control",
    "audio-library",
    "audio-playback",
    "mobile-audio",
    "streaming",
    "mp3",
    "wav",
    "aac",
    "lightweight"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikalaiulasevich/react-native-soundkit.git"
  },
  "author": "Mikalai Ulasevich <mikalaiulasevich@gmail.com> (https://github.com/mikalaiulasevich)",
  "license": "(MIT AND BSD-3-Clause)",
  "bugs": {
    "url": "https://github.com/mikalaiulasevich/react-native-soundkit/issues"
  },
  "homepage": "https://github.com/mikalaiulasevich/react-native-soundkit#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {},
  "devDependencies": {
    "@react-native-community/cli-types": "^15.1.3",
    "@react-native/eslint-config": "^0.76.6",
    "@release-it/conventional-changelog": "^10.0.0",
    "@testing-library/react-native": "^13.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "react-native-builder-bob": "^0.35.2",
    "react-test-renderer": "18.3.1",
    "release-it": "^18.1.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "codegenConfig": {
    "name": "RNSoundKitSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "packageManager": "npm@11.0.0"
}
